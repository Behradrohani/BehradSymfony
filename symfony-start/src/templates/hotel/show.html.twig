{% extends 'base.html.twig' %}

{% block title %}Hotel{% endblock %}

{% block body %}
    <h1>Hotel</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ hotel.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ hotel.name }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ hotel.city }}</td>
            </tr>
            <tr>
                <th>Star</th>
                <td>{{ hotel.star }}</td>
            </tr>
            <tr>
                <th>Facilities</th>
                <td>{{ hotel.facilities }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ hotel.price }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_hotel_index') }}">back to list</a>

    <a class="btn btn-primary" href="{{ path('app_hotel_edit', {'id': hotel.id}) }}">edit</a>

    {{ include('hotel/_delete_form.html.twig') }}
{% endblock %}
