{% extends 'base.html.twig' %}

{% block title %}Hotel{% endblock %}

{% block body %}
    <h1>{{ 'app.title'| trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ hotel.id }}</td>
            </tr>
            <tr>
                <th>{{ 'app.name'| trans }}</th>
                <td>{{ hotel.name }}</td>
            </tr>
            <tr>
                <th>{{ 'app.city'| trans }}</th>
                <td>{{ hotel.city }}</td>
            </tr>
            <tr>
                <th>{{ 'app.star'| trans }}</th>
                <td>{{ hotel.star }}</td>
            </tr>
            <tr>
                <th>{{ 'app.facilities'| trans }}</th>
                <td>{{ hotel.facilities }}</td>
            </tr>
            <tr>
                <th>{{ 'app.price'| trans }}</th>
                <td>{{ hotel.price }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_hotel_index') }}">{{ 'app.back'| trans }}</a>
    <a class="btn btn-primary" href="{{ path('app_hotel_edit', {'id': hotel.id}) }}">{{ 'app.edit'| trans }}</a>

    {{ include('hotel/_delete_form.html.twig') }}
{% endblock %}
