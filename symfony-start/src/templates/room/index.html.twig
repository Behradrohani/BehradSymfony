{% extends 'base.html.twig' %}

{% block title %}Room index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('room') }}
{% endblock %}

    {% block javascripts %}
        {{ parent() }}
        {{ encore_entry_script_tags('room') }}
    {% endblock %}

{% block body %}
    <header>
        <div class="logo">
            <img src="{{ asset("build/images/room.png") }}">
        </div>
    </header>
    <h1>Room index</h1>

    <table class="table table-hover table-bordered">
        <thead>
        <tr>
            <th>Id</th>
            <th>BedNumber</th>
            <th>Free</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr>
                <td>{{ room.id }}</td>
                <td>{{ room.bedNumber }}</td>
                <td>{{ room.free ? 'Yes' : 'No' }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_room_show', {'id': room.id}) }}">show</a>
                    <a class="btn btn-primary" href="{{ path('app_room_edit', {'id': room.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary btn-create-room" href="{{ path('app_room_new') }}">Create new</a>
{% endblock %}
