{% extends 'base.html.twig' %}

{% block title %}Hotel{% endblock %}

{% block body %}
    {% if users is empty %}
        <h2>No attraction is found</h2>
    {% else %}
        <table class="table table-hover table-bordered">

        {% for user in users %}
            <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>User Name</th>
                <th>Email</th>
            </tr>
            </thead>
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.userName }}</td>
                <td>{{ user.email }}</td>
            </tr>
        {% endfor %}
    {% endif %}
    </table>
    <a class="btn btn-primary" href="{{ path('app_register') }}">Back</a>
{% endblock %}
